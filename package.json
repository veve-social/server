{
  "name": "@veve/server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:veve-social/server.git",
  "author": "22mahmoud <mahmoudss1997@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index",
    "clean": "rm -rf dist",
    "build": "run-s clean gen build:ts",
    "build:ts": "tsc",
    "gen": "run-s gen:* -l",
    "gen:prisma": "prisma generate",
    "gen:nexus": "ts-node --transpile-only src/schema",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "type-check": "tsc --pretty --noEmit",
    "format": "run-p format:* -l",
    "format:js": "prettier --write .",
    "format:prisma": "prisma format",
    "lint:js": "eslint . --ext ts --ext tsx --ext js",
    "lint:js:fix": "yarn lint:js --fix",
    "migrate": "run-s migrate:save migrate:up -l",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental"
  },
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "apollo-server-express": "^2.18.1",
    "argon2": "^0.27.0",
    "bcrypt": "^5.0.0",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-session": "^1.17.1",
    "graphql": "14.6.0",
    "ioredis": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "nexus-plugin-prisma": "^0.19.0",
    "redis": "^3.0.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "^0.0.14",
    "@types/cors": "^2.8.7",
    "@types/express-jwt": "^0.0.42",
    "@types/express-session": "^1.17.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.11.2",
    "@types/redis": "^2.8.27",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  }
}
